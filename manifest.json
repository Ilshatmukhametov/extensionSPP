{
    "manifest_version": 3,
    "name": "e-com - spp",
    "version": "1.0.0",
    "background": {
        "service_worker": "background.js",
        "type": "module"
      },
    "host_permissions": ["http://*/*", "https://*/*"],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["app.js"]
        }
    ],
    "permissions": [
        "activeTab",
        "background",
        "debugger",
        "scripting",
        "webNavigation",
        "webRequest",
        "tabs"
    ]
}